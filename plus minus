void plusMinus(vector<int> arr) {
float a=0,b=0,c=0;
int n=arr.size();
for(int i=0;i<n;i++)
{
    if(arr[i]>0)
    a++;
    if(arr[i]<0)
    b++;
    if(arr[i]==0)
    c++;
    
}
cout << setprecision(6) << a/n << endl;
    cout << setprecision(6) << b/n << endl;
    cout << showpoint << setprecision(6) << c/n << endl;
}
